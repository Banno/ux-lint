{
  "name": "ux-lint",
  "version": "2.0.0-alpha",
  "description": "Linting tool for Banno UX projects",
  "main": "dist/src/index.js",
  "bin": {
    "ux-lint": "./dist/src/cli.js"
  },
  "scripts": {
    "build": "run-p compile copy:config",
    "prebuild": "run-s clean",
    "postbuild": "chmod a+x ./dist/src/cli.js",
    "clean": "del-cli dist && mkdirp dist",
    "compile": "tsc",
    "copy:config": "cp -R config dist/config",
    "lint": "tslint --project . --fix",
    "prepublishOnly": "run-s build",
    "test": "JASMINE_CONFIG_PATH=./test/jasmine.json nyc jasmine-ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Banno/ux-lint.git"
  },
  "keywords": [
    "banno",
    "lint",
    "linter",
    "javascript"
  ],
  "author": "Eric Heikes <eric.heikes@banno.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Banno/ux-lint/issues"
  },
  "homepage": "https://github.com/Banno/ux-lint",
  "files": [
    "dist/config",
    "dist/src",
    "types",
    "LICENSE",
    "yarn.lock"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "devDependencies": {
    "@types/ansi-styles": "^3.2.0",
    "@types/del": "^3.0.1",
    "@types/estree": "^0.0.39",
    "@types/extend": "^3.0.0",
    "@types/fs-extra": "^5.0.2",
    "@types/globby": "^6.1.0",
    "@types/hjson": "^2.4.0",
    "@types/htmlhint": "^0.9.1",
    "@types/jasmine": "^2.8.6",
    "@types/json-schema": "^6.0.1",
    "@types/log-symbols": "^2.0.0",
    "@types/minimist": "^1.2.0",
    "@types/node": "^9.6.1",
    "@types/pluralize": "^0.0.28",
    "@types/proxyquire": "^1.3.28",
    "@types/tempfile": "^2.0.0",
    "ansi-styles": "^3.2.1",
    "del": "^2.2.2",
    "del-cli": "^1.1.0",
    "fs-extra": "^2.1.2",
    "jasmine": "^3.1.0",
    "jasmine-spec-reporter": "^4.2.1",
    "jasmine-ts": "^0.2.1",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.3",
    "nyc": "^11.8.0",
    "proxyquire": "^1.7.3",
    "tempfile": "^2.0.0",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.8.3-insiders.20180407"
  },
  "dependencies": {
    "banno-htmlhint": "^0.9.15",
    "chalk": "^2.3.2",
    "eslint": "^3.9.1",
    "eslint-plugin-banno": "^1.0.0",
    "eslint-plugin-html": "^2.0.1",
    "extend": "^3.0.0",
    "globby": "^6.1.0",
    "hjson": "^2.4.1",
    "log-symbols": "^1.0.2",
    "minimist": "^1.2.0",
    "pluralize": "^7.0.0",
    "polymer-lint": "^0.8.3",
    "string-length": "^1.0.1",
    "text-table": "^0.2.0"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 95,
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": false,
    "all": false,
    "report-dir": "./coverage"
  }
}
